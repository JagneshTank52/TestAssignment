@{
    Layout = "_AccountLayout";
}
<div class="h-100">
    <div class="h-100 container-fluid error-page">
        <div class="h-100 pb-5 d-flex flex-column justify-content-center align-items-center">
            <div class="fw-bold error-page-text" style="font-size: 10rem;">
                @ViewData["StatusCode"]
            </div>
            <div class="fw-bold mb-5 error-page-text"style="font-size: 5rem">
                @ViewData["ErrorMessage"]
            </div>
            <div class="d-flex flex-column justify-content-center align-items-center">
                <div class="mb-4">Oops, something went wrong.</div>
                <div class="error-page-text fw-bold">Please try again later or contact support if the issue persists.</div>
            </div>
        </div>
    </div>
</div>